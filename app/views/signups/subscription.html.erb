<%= form_tag update_subscription_signup_path(@signup), method: :put do %>
  <% if @signup.errors[:base].present? %>
    <div class="alert alert-danger"><%= @signup.errors[:base].join(" and ") %></div>
  <% end %>
  <div id='braintree-form-inputs'><%# this is populated by braintree javascript, DO NOT REMOVE %></div>
  <%= submit_tag "Make the magic happen", class: 'btn btn-primary' %>
<% end %>

<script src="https://js.braintreegateway.com/v2/braintree.js"></script>
